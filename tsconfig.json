{
	"extends": "./.svelte-kit/tsconfig.json",
	"compilerOptions": {
		"allowJs": true,
		"checkJs": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"module": "ES6",
		"moduleResolution": "Bundler"
	},
	"exclude": ["dist-vite", "src/lib/presets", "src/lib/plugins", "src/lib/styles"]
}
